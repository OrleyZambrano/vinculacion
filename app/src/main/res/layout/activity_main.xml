<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenedor principal para los fragmentos (inicio, categorías, tours, etc.) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/banner_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_home" />

    <!-- Banner principal con imagen de cabecera (superpuesto) -->
    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:background="@color/primary_color"
        android:contentDescription="@string/welcome_title"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_principal"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barra de navegación inferior personalizada -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottom_nav_margin_horizontal"
        android:layout_marginEnd="@dimen/bottom_nav_margin_horizontal"
        android:layout_marginBottom="@dimen/bottom_nav_margin_bottom"
        android:elevation="16dp"
        android:padding="0dp"
        app:cardBackgroundColor="@color/bottom_nav_background"
        app:cardCornerRadius="@dimen/bottom_nav_corner_radius"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#4CAF50"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:id="@+id/custom_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- Botón Inicio -->
            <LinearLayout
            android:id="@+id/nav_home_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_home"
                android:elevation="2dp"
                android:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón Categorías -->
        <LinearLayout
            android:id="@+id/nav_categories_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_categories_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_categories"
                android:elevation="2dp"
                android:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/nav_categories_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_categories"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón Tours -->
        <LinearLayout
            android:id="@+id/nav_tours_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_tours_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_tours"
                android:elevation="2dp"
                android:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/nav_tours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_tours"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón Mapa -->
        <LinearLayout
            android:id="@+id/nav_map_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_map_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_option2"
                android:elevation="2dp"
                android:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/nav_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_map"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:id="@+id/nav_profile_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile"
                android:elevation="2dp"
                android:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_profile"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>