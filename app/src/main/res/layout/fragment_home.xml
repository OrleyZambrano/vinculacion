<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_home">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/homeSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/homeScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/container_padding_horizontal"
            android:paddingTop="@dimen/container_padding_vertical"
            android:paddingEnd="@dimen/container_padding_horizontal"
            android:paddingBottom="@dimen/spacing_xxlarge">

            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_welcome_title"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/homeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/home_welcome_subtitle"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/text_secondary" />

            <!-- Weather Card -->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/weatherCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/surface_container"
                    app:cardCornerRadius="@dimen/card_corner_radius_medium"
                    app:cardElevation="@dimen/card_elevation"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp">

                    <!-- Progress -->
                    <ProgressBar
                        android:id="@+id/weatherProgressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:visibility="gone" />

                    <!-- Error State -->
                    <LinearLayout
                        android:id="@+id/weatherError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_location"
                            android:alpha="0.5"
                            android:contentDescription="@string/weather_icon_description"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/weatherErrorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:gravity="center"
                            android:text="@string/error_loading_weather"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/weatherErrorAction"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="@string/location_permission_retry"
                            android:visibility="gone"
                            app:icon="@drawable/ic_refresh" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/weatherContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Fila principal con toda la info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Icono del clima -->
                            <ImageView
                                android:id="@+id/weatherIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/weather_icon_description"
                                android:scaleType="fitCenter" />

                            <!-- Info de temperatura y descripci칩n -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/weatherTemperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                        android:textColor="@color/text_primary" />

                                    <TextView
                                        android:id="@+id/weatherDescription"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                        android:textColor="@color/text_secondary" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/weatherLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:drawablePadding="3dp"
                                    android:drawableStart="@drawable/ic_location"
                                    android:drawableTint="@color/text_secondary" />
                            </LinearLayout>

                            <!-- Bot칩n de refresh -->
                            <ImageButton
                                android:id="@+id/weatherRefreshButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/weather_refresh"
                                android:src="@drawable/ic_refresh"
                                android:padding="6dp"
                                app:tint="@color/text_secondary" />
                        </LinearLayout>

                        <!-- Details Grid (Compacto) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/surface_elevated"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Humedad -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="游눦"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/weatherHumidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>

                            <!-- Viento -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="游눧"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/weatherWind"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>

                            <!-- Bird Activity -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="游냕"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/weatherBirdActivity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    android:textColor="@color/text_primary" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carrusel de aves destacadas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/homeCarouselCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/carousel_height"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:clipToOutline="true"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:cardElevation="@dimen/card_elevation_large"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/topBirdsPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/pagerIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabIndicatorFullWidth="false"
                        app:tabIndicatorColor="@color/primary_color"
                        app:tabSelectedTextColor="@color/primary_color"
                        app:tabTextColor="@color/text_secondary"
                        app:tabMode="fixed"
                        app:tabPaddingStart="6dp"
                        app:tabPaddingEnd="6dp"
                        app:tabPaddingTop="0dp"
                        app:tabPaddingBottom="0dp"
                        app:tabRippleColor="@null"
                        app:tabIconTint="@null" />

                    <TextView
                        android:id="@+id/emptyCarouselText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center"
                        android:text="@string/home_empty_carousel"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/homeRecognitionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/primary_soft"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_large"
                    android:paddingTop="@dimen/card_padding_large"
                    android:paddingEnd="@dimen/card_padding_large"
                    android:paddingBottom="@dimen/card_padding_large">

                    <TextView
                        android:id="@+id/recognitionHeroTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_recognition_hero_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/primary_color_dark" />

                    <TextView
                        android:id="@+id/recognitionHeroSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/home_recognition_hero_body"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/recognitionHeroPhotoButton"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:minHeight="@dimen/button_min_height"
                            android:paddingStart="12dp"
                            android:paddingTop="@dimen/button_padding_vertical"
                            android:paddingEnd="12dp"
                            android:paddingBottom="@dimen/button_padding_vertical"
                            android:textAllCaps="false"
                            android:letterSpacing="0.02"
                            android:text="@string/home_recognition_photo_button"
                            app:icon="@drawable/ic_camera"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="20dp"
                            app:cornerRadius="@dimen/button_corner_radius"
                            app:iconTint="@color/primary_color_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/recognitionHeroAudioButton"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="@dimen/button_min_height"
                            android:paddingStart="12dp"
                            android:paddingTop="@dimen/button_padding_vertical"
                            android:paddingEnd="12dp"
                            android:paddingBottom="@dimen/button_padding_vertical"
                            android:textAllCaps="false"
                            android:letterSpacing="0.02"
                            android:text="@string/home_recognition_audio_button"
                            app:icon="@drawable/ic_audio"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="20dp"
                            app:cornerRadius="@dimen/button_corner_radius"
                            app:iconTint="@color/primary_color_dark" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Acciones r치pidas - ahora manejadas por FAB -->
            <TextView
                android:id="@+id/quickActionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:text="@string/home_quick_actions_title"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.005"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/text_primary"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quickActionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:clipToPadding="false"
                android:paddingStart="@dimen/spacing_micro"
                android:nestedScrollingEnabled="false"
                android:paddingEnd="@dimen/spacing_xlarge"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Consejos para Ecoturistas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/card_background">

                    <!-- Header dentro de la tarjeta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@color/primary_vibrant"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Consejos para Ecoturistas"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/primary_color"
                            android:fontFamily="sans-serif-medium"/>

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_bird"
                            app:tint="@color/primary_vibrant"
                            android:contentDescription="Consejos"/>

                    </LinearLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/ecoTipsPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>

                    <!-- Indicadores m치s sutiles -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/ecoTipsIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            app:tabBackground="@drawable/home_carousel_dot"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp"
                            app:tabMaxWidth="8dp"
                            app:tabMinWidth="8dp"
                            app:tabPaddingEnd="6dp"
                            app:tabPaddingStart="6dp"
                            app:tabRippleColor="@null" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bot칩n flotante de acciones r치pidas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/quickActionsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/home_quick_actions_title"
        app:srcCompat="@drawable/ic_quick_actions"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary_vibrant"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
