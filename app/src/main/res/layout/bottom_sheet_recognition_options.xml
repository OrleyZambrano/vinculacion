<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birds_header_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/text_primary"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birds_header_body"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/text_secondary"
        android:paddingBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/optionCapturePhoto"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/birds_hero_photo_button"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_camera"
        app:iconGravity="start"
        app:iconPadding="12dp"
        app:iconSize="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/optionRecordAudio"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/birds_hero_audio_button"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_audio"
        app:iconGravity="start"
        app:iconPadding="12dp"
        app:iconSize="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/optionChooseGallery"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/birds_hero_gallery_button"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_gallery"
        app:iconGravity="start"
        app:iconPadding="12dp"
        app:iconSize="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/optionViewMap"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/birds_map_button"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_option2"
        app:iconGravity="start"
        app:iconPadding="12dp"
        app:iconSize="24dp" />

</LinearLayout>
