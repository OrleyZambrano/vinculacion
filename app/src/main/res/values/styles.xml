<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de botones personalizados -->
    <style name="Widget.Vinculacion.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing_small</item>
    </style>

    <style name="Widget.Vinculacion.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="Widget.Vinculacion.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
    </style>

    <!-- Estilos de tarjetas -->
    <style name="Widget.Vinculacion.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="Widget.Vinculacion.Card.Hero" parent="Widget.Vinculacion.Card">
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_large</item>
        <item name="contentPadding">@dimen/card_padding_large</item>
    </style>

    <!-- Estilos de chips -->
    <style name="Widget.Vinculacion.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">@dimen/button_corner_radius</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Estilos de tipografía específicos -->
    <style name="TextAppearance.Vinculacion.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <style name="TextAppearance.Vinculacion.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Vinculacion.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.025</item>
    </style>
</resources>
