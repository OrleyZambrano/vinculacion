rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function tourGuideId(tourId) {
      return get(/databases/$(database)/documents/tours/$(tourId)).data.guideId;
    }

    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);
    }

    match /tours/{tourId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.guideId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.guideId == request.auth.uid;
    }

    match /tour_participants/{participantId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        tourGuideId(resource.data.tourId) == request.auth.uid
      );
    }

    match /routes/{routeId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.guideId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.guideId == request.auth.uid;
    }

    match /media_records/{recordId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.createdByUserId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.createdByUserId == request.auth.uid;
    }
  }
}